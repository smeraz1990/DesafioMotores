
{{#if productos}}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table" style="width: 100%;">
        <thead class="thead-dark">
                <th scope="col" style="width: 30%;">Titulo</th>
                <th scope="col" style="width: 30%;">Precio</th>
                <th scope="col" style="width: 40%;" class="text-center">Imagen</th>
        </thead>
        <tbody>
                {{#each productos}}
                    <tr>
                        <td class="align-middle">{{this.title}}</td>
                        <td class="align-middle">{{this.price}}</td>
                        <td class="align-middle text-center"><img src="{{this.thumbnail}}" width="20%" alt="MDN"></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{else }}
    <div class="alert alert-danger" role="alert">
        No se encuentran productos registrados
    </div>
{{/if }}

<div class="row mt-2">
    <div class="col-md-8  offset-md-2 text-center">
        <a href="../" class="btn btn-secondary">Formulario Agregar</a>
    </div>
</div>